<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white03">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/base03"
        android:orientation="vertical"
        android:padding="8dp"
        >
    <SearchView
        android:background="@color/white02"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-15dp"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/white02"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="8dp"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/signin_btn" />

            <ImageView
                android:layout_margin="8dp"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/signin_btn" />

            <ImageView
                android:layout_margin="8dp"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/signin_btn" />

            <ImageView
                android:layout_margin="8dp"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/signin_btn" />

            <ImageView
                android:layout_margin="8dp"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/signin_btn" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_margin="8dp"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/signin_btn" />

            <ImageView
                android:layout_margin="8dp"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/signin_btn" />

            <ImageView
                android:layout_margin="8dp"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/signin_btn" />

            <ImageView
                android:layout_margin="8dp"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/signin_btn" />

            <ImageView
                android:layout_margin="8dp"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/signin_btn" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:background="@color/white02"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lagi Trending ... "
            android:fontFamily="@font/poppins_bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tren" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="170dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:background="@color/white02"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:src="@drawable/product2" />

            <TextView
                android:id="@+id/textProduct1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Processor Amd Ryzen 9 9950x 4.3 Ghz Socket Am5 ..."
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:textSize="11dp"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="170dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:background="@color/white02"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:src="@drawable/product1" />

            <TextView
                android:id="@+id/textProduct2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACER GAMING LAPTOP NITRO MT57-921P i9-11900H.."
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:textSize="11dp"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="92dp"
        app:menu="@drawable/bottom_navigation_menu" />

</LinearLayout>
